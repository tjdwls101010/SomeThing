{
  "companyAnnouncements": [
    "MoAI-ADK: SPEC-First TDD with 135+ Skills and Context7 integration",
    "Commands: /moai:1-plan → /moai:2-run → /moai:3-sync → git deploy",
    "Quality: TRUST 5 principles with ≥85% test coverage enforced",
    "Context7: Real-time library documentation for hallucination-free code"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run $CLAUDE_PROJECT_DIR/.claude/hooks/moai/session_start__show_project_info.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $CLAUDE_PROJECT_DIR/.claude/hooks/moai/pre_tool__document_management.py"
          }
        ]
      }
    ]
  },
